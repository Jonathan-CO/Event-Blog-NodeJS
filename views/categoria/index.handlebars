<h2>Categorias</h2>

{{#each categorias}}
<div class="card mt-4">
    <div class="card-body">

        <h3>{{nome}}</h3>
        <a href="/categorias/{{slug}}">
            <button class="btn btn-success">Leia Mais</button>
        </a>


    </div>
</div>
{{else}}
    <h5>Nenhuma categoria</h5>
{{/each}}