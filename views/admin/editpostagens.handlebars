{{#each erros}}
<div class="alert alert-danger"> {{texto}}</div>
{{else}}

{{/each}}


<div class="card">
    <div class="card-body">
        <h4>Editar Postagem</h4>
        <form action="/admin/postagens/edit" method="post">
            <input type="hidden" name="id" value="{{postagem._id}}">

            <label for="titulo" class="mt-2">Título</label>
            <input type="text" name="titulo" id="titulo" class="form-control" value="{{postagem.titulo}}">

            <label for="slug" class="mt-2">Slug</label>
            <input type="text" name="slug" id="slug" class="form-control" value="{{postagem.slug}}">

            <label for="descricao" class="mt-2">Descrição</label>
            <input type="text" name="descricao" id="descricao" class="form-control" value="{{postagem.descricao}}">

            <label for="conteudo" class="mt-2">Conteúdo</label>
            <textarea name="conteudo" id="conteudo" class="form-control">{{postagem.conteudo}}</textarea>

            <label for="categoria" class="mt-2">Categoria</label>
            <select name="categoria" id="categoria" class="custom-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma Categoria Registrada</option>
                {{/each}}
            </select>


            <button type="submit" class="btn btn-success mt-4">Editar Postagem</button>


        </form>
    </div>
</div>